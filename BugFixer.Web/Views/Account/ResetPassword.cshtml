@using BugFixer.Application.ViewModels.Account
@model ResetPasswordVM

@{
    ViewData["Title"] = " تغییر رمز عبور";
    Layout = "_SecondLayout";
}

<div class="breadcumb-layer">
    <div class="container">
        <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
            <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item"><span itemprop="name"> باگ فیکسر </span></a></li>
            <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item"><span itemprop="name"> تغییر رمزعبور </span></a></li>
        </ul>
    </div>
</div>

<div class="user-page">

    <div class="container " style="display: flex; justify-content: center;">


        <div class="col-md-5 ">
         
            <form asp-controller="Account" asp-action="ResetPassword" method="post" class="col-md-5">
                <div class="inner">
                    <div class="input-layer">
                        <span><i class="icon-lock"></i>رمزعبور</span>
                        <input asp-for="Password" type="password">
                    </div>
                    <div class="input-layer">
                        <span><i class="icon-lock"></i>تکرار رمزعبور</span>
                        <input asp-for="RepeatPassword" type="password">
                    </div>
                    <button class="pull-right">ثبت</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}


